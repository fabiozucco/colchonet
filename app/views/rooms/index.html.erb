<h1><%= t('rooms.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('rooms.title') %></th>
      <th><%= t('rooms.location') %></th>
      <th><%= t('rooms.description') %></th>
      <th><%= t('rooms.invoke') %></th>
      <th><%= t('rooms.active_record') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= room.invoke %></td>
        <td><%= room.active_record %></td>
        <td><%= link_to t('rooms.show.show'), room %></td>
        <td><%= link_to t('rooms.show.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('rooms.show.delete'), room_path(room), method: :delete, data: {confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('rooms.new'), new_room_path %>

